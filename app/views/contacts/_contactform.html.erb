
<div id="form">
<%= form_for @contact, remote: true  do |f| %>


  <%= f.text_field :name, :placeholder => "Name"%>
<br>


  <%= f.text_field :email, :placeholder => "Email"%>
<br>
 
  <%= f.text_area :message, :placeholder => "Say what you need to say."%>
<br>

  
  <%= f.submit "Send" , :class => 'submit'%>
  
 <% end %>
 
 
  
  <a href = "#" id="hideform">Hide</a>
</div>
